<script type = "text/javascript">
$("#scrape").on("click",function(){
  $.get("/scrape",function(data){
    console.log(data);
    location.reload();
  });
});

$(".saveBtn").on("click",function(event){
	event.preventDefault();	
  var id = $(this).attr("data-id");
  console.log(id);

  $.ajax("/saveArticle/" + id, {
      type: "PUT",
      data:{save: true}
    })
    .then(function () {
      console.log("changed save to", true);
      location.reload();
	});


});
</script>

