<div class="container_landing">

    <!-- a Bootstrap row with columns -->
    <div class="row">
        <!-- At large+ or medium screens takes up 2/3 width (8/12) small take full screen 12/12 -->
        <div class="col-lg-12 col-md-12 col-sm-12">
            <div id = "landingjumbotron" class="jumbotron jumbotron-fluid">
                <p class="text-center">
                    <button id="scrape" class="btn btn-outline-success " type="submit">Search for new Articles</button>
                </p>
            </div>
            <div class = "col-md-12 col-sm-12">
                <ul>
                  {{#each article}}
                      <div class ="alert alert-info ">
                        <li>
                          <p>{{title}}</p>
                          <p> Summary: {{summary}}</p>
                          <p> Article Link: <a href = {{link}} >{{link}}</a></p>

                          <img src={{imglink}} width =80px alt="catbaby">
                          <form id ="adoptCat"  method="POST">
                          <input type="text"  name="ownername{{id}}" placeholder="Enter your name to adopt">

                          <button type="submit" class = "btn btn-primary adpBtn" data-id={{_id}}>Adopt Meow</button>
                          </form>
                        </li>
                      </div>
                  {{/each}}
                </ul>
              </div>


              <div class ="text-center col-md-4 col-sm-4">
                <form id ="addCat"  method="POST">
                  <input type="text" name="catname" placeholder="Enter cat name">

                  <button class ="btn btn-primary " type="submit">Submit</button>
                </form>
              </div>
            
        </div>

    </div>

</div>
